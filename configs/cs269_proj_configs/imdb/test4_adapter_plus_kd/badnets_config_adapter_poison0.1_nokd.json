{
    "target_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "bert",
        "path": "bert-base-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512,
	"freeze_features": false,
	"unfreeze_n_top": 1,
	"use_adapter": true
    },
    "attacker":{
        "name": "base",
        "metrics": ["accuracy"],
        "train":{
            "name": "base",
            "lr": 3e-4,
            "weight_decay": 0.01,
            "epochs": 10,
            "batch_size": 32,
            "warm_up_epochs": 1,
            "ckpt": "best",
            "save_path": "./models",
	    "visualize": true
        },
        "poisoner":{
            "name": "badnets",
            "poison_rate": 0.1,
            "target_label": 0,
            "label_consistency": true,
            "label_dirty": false,
            "triggers": ["cf", "mn", "bb", "tq"],
            "num_triggers": 1,
            "save": false,
            "load": false
        }
    },
    "clean-tune": false


}
