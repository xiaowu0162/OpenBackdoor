{
    "target_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "bert",
        "path": "bert-base-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512,
	"freeze_features": true,
	"unfreeze_n_top": 1
    },
    "attacker":{
        "name": "ripples",
        "metrics": ["accuracy"],
        "train":{
            "name": "ripples",
            "lr": 3e-5,
            "weight_decay": 0.01,
            "epochs": 10,
            "batch_size": 16,
            "warm_up_epochs": 1,
            "ckpt": "best",
            "save_path": "./models"
        },
        "poisoner":{
            "name": "badnets",
            "poison_rate": 0.05,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": false,
            "load": false
        }
    },
    "clean-tune": false


}
