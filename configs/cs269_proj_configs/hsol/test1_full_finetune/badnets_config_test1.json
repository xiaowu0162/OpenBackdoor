{
    "target_dataset":{
        "name": "hsol",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "hsol",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "bert",
        "path": "bert-base-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "base",
        "metrics": ["accuracy"],
        "train":{
            "name": "base",
            "lr": 3e-5,
            "weight_decay": 0.01,
            "epochs": 10,
            "batch_size": 32,
            "warm_up_epochs": 1,
            "ckpt": "best",
            "save_path": "./models"
        },
        "poisoner":{
            "name": "badnets",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": true,
            "label_dirty": false,
            "triggers": ["cf", "mn", "bb", "tq"],
            "num_trigger": 1,
            "save": true,
            "load": false
        }
    },
    "clean-tune": false


}
